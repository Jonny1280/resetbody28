<script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement(
    {pageLanguage: 'ru', includedLanguages: 'en,el,ru,es,de,fr,it,pt,uk,pl', layout: google.translate.TranslateElement.InlineLayout.SIMPLE},
    'google_translate_element'
  );
}
document.getElementById('surveyForm').addEventListener('submit', e => e.preventDefault());

// Таймер скидки на финальном шаге
const step7 = document.getElementById('step7');
const timerBlock = document.getElementById('timerBlock');
const timerText = document.getElementById('timer');
const ding = document.getElementById('ding');

function startTimer(duration) {
  let time = duration;
  timerBlock.style.display = 'block';
  const interval = setInterval(() => {
    const minutes = Math.floor(time / 60);
    const seconds = time % 60;
    timerText.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
    if (--time < 0) {
      clearInterval(interval);
      timerBlock.textContent = '⏰ Время истекло, но вы всё еще можете получить курс!';
    }
  }, 1000);
}

const observer = new MutationObserver(() => {
  if (step7.classList.contains('active')) {
    startTimer(20 * 60);
    ding.play();
    observer.disconnect();
  }
});
observer.observe(step7, { attributes: true, attributeFilter: ['class'] });
const stepNow = document.getElementById('stepNow');
function updateCounter() {
  stepNow.textContent = currentStep + 1;
}
function showToast(msg) {
  const toast = document.getElementById('toast');
  toast.textContent = msg;
  toast.style.display = 'block';
  toast.style.animation = 'toastIn 0.5s ease-out forwards';
  setTimeout(() => {
    toast.style.animation = 'toastOut 0.5s ease-in forwards';
    setTimeout(() => { toast.style.display = 'none'; }, 500);
  }, 3000);
}
showToast('Добро пожаловать в программу трансформации!');
</script>
